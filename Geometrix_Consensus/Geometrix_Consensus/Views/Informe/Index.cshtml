@model IList<Geometrix_Consensus.Views.Models.SetFiguras>
@{
    ViewBag.Title = "Produccion Diaria";
}
<link href="css/bootstrap-datetimepicker.min.css" rel="stylesheet">
<script src="js/bootstrap-datetimepicker.min.js"></script>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12" style="margin-bottom:20px;">
            <div class="text-center m-t-lg">
                <h1 style="    font-size: 60px;">
                    @ViewData["SubTitle"]
                </h1>
            </div>
        </div>
        <div class="col-xl-12" style="margin-bottom:15px;">

        </div>
        <div class="col-xl-12">
            <div class="card" style="margin-bottom:15px;">
                <div class="card-header">
                    <div class="row">
                        <div class=" col-lg-6">
                            <h5 style="  margin-top: 7px;">Detalle de Set Generados</h5>
                        </div>
                        <div class=" col-lg-6" style="text-align:right;">
                            <a href="@Url.Action("Index", "Home")"><div class="btn btn-primary">Volver</div> </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Cuadrado</th>
                                <th scope="col">Rectangulo</th>
                                <th scope="col">Triangulo</th>
                                <th scope="col">Circulo</th>
                                <th scope="col">Valorizado Cuadrado</th>
                                <th scope="col">Valorizado Rectangulo</th>
                                <th scope="col">Valorizado Triangulo</th>
                                <th scope="col">Valorizado Circulo</th>
                                <th scope="col">Total Set</th>
                                @*<th scope="col">Handle</th>*@
                            </tr>
                        </thead>
                        <tbody>
                            @for (var i = 0; i < Model.Count; i++)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => Model[i].ID)
                                        @Html.HiddenFor(modelItem => Model[i].ID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => Model[i].Cuadrado)
                                        @Html.HiddenFor(modelItem => Model[i].Cuadrado)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => Model[i].Rectangulo)
                                        @Html.HiddenFor(modelItem => Model[i].Rectangulo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => Model[i].Triangulo)
                                        @Html.HiddenFor(modelItem => Model[i].Triangulo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => Model[i].Circulo)
                                        @Html.HiddenFor(modelItem => Model[i].Circulo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => Model[i].ValorizadoCuadrado)
                                        @Html.HiddenFor(modelItem => Model[i].ValorizadoCuadrado)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => Model[i].ValorizadoRectangulo)
                                        @Html.HiddenFor(modelItem => Model[i].ValorizadoRectangulo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => Model[i].ValorizadoTriangulo)
                                        @Html.HiddenFor(modelItem => Model[i].ValorizadoTriangulo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => Model[i].ValorizadoCiruculo)
                                        @Html.HiddenFor(modelItem => Model[i].ValorizadoCiruculo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => Model[i].Total_Set)
                                        @Html.HiddenFor(modelItem => Model[i].Total_Set)
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                
                </div>
            </div>
            <div class="card" style="margin-bottom:15px;">
                <div class="card-header">
                    <div class="row">
                        <div class=" col-lg-6">
                            <h5 style="  margin-top: 7px;">Produccion Diaria: </h5>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-xl-6">
                            <table class="table">
                                <thead class="thead-dark">
                                    <tr>

                                        <th scope="col">T.Cuadrado</th>
                                        <th scope="col">T.Rectangulo</th>
                                        <th scope="col">T.Triangulo</th>
                                        <th scope="col">T.Circulo</th>
                                        <th scope="col">T.Set</th>
                                        @*<th scope="col">Handle</th>*@
                                    </tr>
                                </thead>
                                <tbody>
                                 
                                    <tr>

                                        <td>
                                            <strong>@ViewBag.Cant_Cuadrado</strong>
                                        </td>
                                        <td>
                                            <strong>@ViewBag.Cant_Rectangulo</strong>
                                        </td>
                                        <td>
                                            <strong>@ViewBag.Cant_Triangulo</strong>
                                        </td>
                                        <td>
                                            <strong>@ViewBag.Cant_Circulo</strong>
                                        </td>
                                        <td>
                                            <strong>@ViewBag.Total_Cantidad_Set</strong>
                                        </td>
                                    </tr>
      

                                </tbody>
                            </table>
           
                        </div>
                        <div class="col-xl-6">
                            <dl class="dl-horizontal">

                                <dt>
                                    TOTAL COSTO
                                </dt>
                                <dd>
                                    $ @ViewBag.Total_Costo
                                </dd>

                                <dt>
                                    GANANCIA PERCIBIDA
                                </dt>
                                <dd>
                                    $ @ViewBag.Ganancia_Percibida
                                </dd>

                                <dt>
                                    PRECIO TOTAL:
                                </dt>
                                <dd>
                                    $ <strong style="color:forestgreen;">@ViewBag.Precio_Total</strong>
                                </dd>
                            </dl>
                        </div>
                    </div>
                  
                </div>
            </div>
        </div>
    </div>
</div>
